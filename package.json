{
  "name": "@digitalcredentials/vc-bitstring-status-list",
  "version": "0.0.1-0",
  "description": "Verifiable Credentials Bitstring Status List",
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "lib",
    "rollup.config.js",
    "build-dist.sh",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "rollup": "rollup -c rollup.config.js",
    "build": "npm run clear && npm run rollup && ./build-dist.sh",
    "clear": "rimraf dist/ && mkdir dist",
    "posttest": "node post-test.js",
    "prepare": "npm run build",
    "pretest": "node pre-test.js",
    "rebuild": "npm run clear && npm run build",
    "test": "npm run test-node",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 30000 -A -R ${REPORTER:-spec} --require tests/test-mocha.js tests/*.spec.js",
    "test-karma": "karma start karma.conf.cjs",
    "coverage": "cross-env NODE_ENV=test c8 npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly --reporter=text-summary --reporter=text npm run test-node",
    "coverage-report": "c8 report",
    "lint": "eslint --ext .cjs,.js ."
  },
  "dependencies": {
    "@digitalbazaar/credentials-v2-context": "digitalbazaar/credentials-v2-context#main",
    "@digitalbazaar/vc-bitstring-status-list-context": "^1.0.0",
    "@digitalcredentials/bitstring": "^3.1.2",
    "@digitalcredentials/vc": "digitalcredentials/vc#vc-2.0-time-props",
    "credentials-context": "^2.0.0"
  },
  "devDependencies": {
    "@digitalcredentials/did-method-key": "^2.0.3",
    "@digitalcredentials/ed25519-signature-2020": "^4.0.0",
    "@digitalcredentials/ed25519-verification-key-2020": "^4.0.0",
    "@digitalcredentials/jsonld-signatures": "digitalcredentials/jsonld-signatures#add-derive-function-and-pass-proof-set",
    "@npmcli/package-json": "^5.0.0",
    "c8": "^9.1.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "ed25519-signature-2020-context": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-digitalbazaar": "^5.0.1",
    "eslint-plugin-jsdoc": "^48.0.4",
    "eslint-plugin-unicorn": "^50.0.1",
    "esm": "^3.2.25",
    "karma": "^6.4.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.1",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "rimraf": "^5.0.5",
    "rollup": "^2.77.2",
    "webpack": "^5.90.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalcredentials/vc-bitstring-status-list"
  },
  "keywords": [
    "vc",
    "verifiable credential",
    "status list",
    "bitstring",
    "BitstringStatusList",
    "BitstringStatusListCredential",
    "VerifiableCredential"
  ],
  "bugs": {
    "url": "https://github.com/digitalcredentials/vc-bitstring-status-list/issues"
  },
  "homepage": "https://github.com/digitalcredentials/vc-bitstring-status-list",
  "engines": {
    "node": ">=18"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text-summary",
      "text"
    ]
  }
}
